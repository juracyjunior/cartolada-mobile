<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CartoladaMobile.Main.MainPage"
    Title="{Binding Title}">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="{Binding MercadoStatus.StatusMercadoStr, StringFormat='Mercado {0}'}" Order="Secondary" />
        <ToolbarItem Text="{Binding MercadoStatus.RodadaAtual, StringFormat='Rodada {0}'}" Order="Secondary" />
    </TabbedPage.ToolbarItems>
</TabbedPage>
